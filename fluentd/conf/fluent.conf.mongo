# Single MongoDB
<match mongo.**>
  @type mongo
  host 192.168.99.100'
  port 27017
  database fluentd
  collection logs

  # for capped collection
  capped
  capped_size 1024m

  # authentication
  user root
  password rootpassword

  <inject>
    # key name of timestamp
    time_key time
  </inject>

  <buffer>
    # flush
    flush_interval 10s
  </buffer>
</match>